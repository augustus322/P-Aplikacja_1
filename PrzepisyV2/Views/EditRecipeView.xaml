<UserControl x:Class="PrzepisyV2.Views.EditRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrzepisyV2.Views" 
             xmlns:components="clr-namespace:PrzepisyV2.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="32" Text="Edytuj przepis"/>
        <components:RecipeDetailsForm Grid.Row="1" Margin="0 20 0 0" DataContext="{Binding RecipeDetailsFormViewModel}"/>
    </Grid>
</UserControl>
